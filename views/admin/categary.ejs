<script>
  
  
  //add category
  
function addCate() {

  const cate = document.getElementById('cateName');
 const radio= document.querySelector('input[name="radio"]:checked')

 fetch(`/admin/category?name=${cate.value}&&radio=${radio.value}`,{method:'post'})

 .then(response => {
      if (response.ok) {
        
        sweet();
        $('#reloadDiv').load('/admin/category #reloadDiv')
      }
    })
    .catch(error => {
      console.error('Error:', error);
    });


}

// checking the unique category

function datacheck(input) {

const error  = document.getElementById('errs')
const button =document.querySelector('#submit')

fetch(`/admin/category?inp=${input.value}`,{method:'post'}).then(res=>res.json()).then(data=>{
 
  if(data.inp){
  button.disabled=true
  error.textContent = 'Already Exist'
    
     
  }else{
    button.disabled=false
    error.textContent=''
  }
})

  
}

// validation

function categoryValidation(input) {
  
  var value = input.value.trim(); 
    var errorElement = document.getElementById('err');
    const button =document.getElementById('submit')

    var letters = /^[A-Za-z ]+$/;

    if (!value.match(letters)) {
        errorElement.textContent = 'only characters';
       
        button.disabled = true;
        return false;
      }
      
    if (value.length < 4) {
      
        errorElement.textContent = 'Minimum 4 characters required.';
        button.disabled = true;
        return false;
    }
    

    errorElement.textContent = ''; 
    button.disabled = false; 
  }
 
  function sweet(){

  Swal.fire({
        icon: 'success',
        title: 'Category added',
        text: 'Category added successfully ',
        confirmButtonText: 'Okay'
    })
  }
 //edit category 

 function editcate(id) {
  const cateid = id;
  const newName = document.getElementById('c' + id).value;

  fetch(`/admin/category?id=${id}&&value=${newName}`, {
    method: 'PUT',
    headers: { 'Content-Type': 'application/json' }
  })
    .then(response => {
      if (!response.ok) {
        throw new Error('Network response was not ok');
      }
      return response.json();
    })
    .then(data => {
      if (data.error) {
        Swal.fire({
          icon: 'error',
          title: 'Error',
          text: data.error,
          confirmButtonText: 'Okay'
        });
      } else {
        Swal.fire({
          icon: 'success',
          title: 'Category Edited',
          text: 'Category edited successfully',
          confirmButtonText: 'Okay'

        }).then(result => {
          if (result.isConfirmed) {
            $('#reloadDiv').load('/admin/category #reloadDiv')
          }
        });
      }
    })
    .catch(error => {
      console.error('Problem in editing category', error);
     
    });
}
